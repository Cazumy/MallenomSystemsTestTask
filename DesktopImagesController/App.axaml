<Application
    x:Class="AvaloniaApp.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AvaloniaApp"
    xmlns:service="using:AvaloniaApp.Services"
    RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <!--  Тема для отображения DataGrid  -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
    </Application.Styles>

    <Application.Resources>
        <!--  Добавление конвертера из массива байтов в Bitmap и обратно  -->
        <service:ImageConverterService x:Key="ImageConverterService" />
    </Application.Resources>
</Application>